@page
@model ScriptureJournal.Pages.JournalEntries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journal Entry</h4>
<hr />
<div class="flex_container">
<div class="row first_item">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalEntry.EntryDate" class="control-label"></label>
                <input asp-for="JournalEntry.EntryDate" class="form-control" />
                <span asp-validation-for="JournalEntry.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Book" class="control-label"></label>
                <input asp-for="JournalEntry.Book" class="form-control" />
                <span asp-validation-for="JournalEntry.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Chapter" class="control-label"></label>
                <input asp-for="JournalEntry.Chapter" class="form-control" />
                <span asp-validation-for="JournalEntry.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Verse" class="control-label"></label>
                <input asp-for="JournalEntry.Verse" class="form-control" />
                <span asp-validation-for="JournalEntry.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Scripture" class="control-label"></label>
                <textarea rows="4" asp-for="JournalEntry.Scripture" class="form-control" ></textarea>
                <span asp-validation-for="JournalEntry.Scripture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Entry" class="control-label"></label>
                <textarea asp-for="JournalEntry.Entry" class="form-control" rows="4"></textarea>
                <span asp-validation-for="JournalEntry.Entry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    <div class=".image_container"><img class="side_img" src="~/jesus.jpg" alt="jesus" /></div>
    </div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
